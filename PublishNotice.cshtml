@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Publish Notice</title>

    <style>
        * {
            box-sizing: border-box
        }

        body {
            margin: 0;
            font-family: "Segoe UI",system-ui,Arial;
            background: #f5f7fb;
            color: #0b1220
        }

        .topbar {
            background: linear-gradient(135deg,#1ea4c8,#31b87b);
            color: #fff;
            padding: 16px 22px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: 12px;
        }

            .topbar b {
                font-size: 16px
            }

        .nav a {
            color: #fff;
            text-decoration: none;
            font-weight: 900;
            padding: 10px 12px;
            border-radius: 12px;
            border: 1px solid rgba(255,255,255,.35);
            background: rgba(255,255,255,.12);
            margin-left: 8px;
            display: inline-block;
        }

            .nav a:hover {
                background: rgba(255,255,255,.18)
            }

        .wrap {
            width: min(900px,94%);
            margin: 18px auto 30px
        }

        h1 {
            margin: 0;
            font-size: 22px;
            font-weight: 1000
        }

        .sub {
            margin-top: 6px;
            color: #6a768a;
            font-weight: 750
        }

        .card {
            margin-top: 16px;
            background: #fff;
            border: 1px solid #eef2f7;
            border-radius: 18px;
            padding: 18px;
            box-shadow: 0 10px 25px rgba(0,0,0,.06);
        }

        label {
            display: block;
            font-weight: 950;
            margin: 12px 0 8px
        }

        input, textarea, select {
            width: 100%;
            padding: 12px 12px;
            border: 1px solid #e5e7eb;
            border-radius: 12px;
            font-weight: 750;
            outline: none;
        }

        textarea {
            min-height: 160px;
            resize: vertical
        }

        .btn {
            margin-top: 14px;
            width: 100%;
            border: none;
            border-radius: 14px;
            padding: 14px 16px;
            font-weight: 1000;
            cursor: pointer;
            background: #0b5cff;
            color: #fff;
            box-shadow: 0 14px 30px rgba(11,92,255,.25);
            font-size: 14px;
        }

            .btn:hover {
                filter: brightness(.98)
            }

        .err {
            margin-top: 12px;
            padding: 12px;
            border-radius: 12px;
            background: #ffe9e9;
            color: #b91c1c;
            font-weight: 900;
            border: 1px solid #fecaca;
        }
    </style>
</head>

<body>
    <div class="topbar">
        <b>Smart Nagar — Admin</b>
        <div class="nav">
            <a href="/Admin/Dashboard">Dashboard</a>
            <a href="/Admin/ManageUsers">Manage Users</a>
            <a href="/Admin/SystemOverview">System Overview</a>
            <a href="/Admin/Notices">Notices</a>
            <a href="/Account/Logout">Logout</a>
        </div>
    </div>

    <div class="wrap">
        <h1>Publish Notice</h1>
        <div class="sub">Create a new municipal announcement </div>

        <div class="card">
            <form method="post" action="/Admin/PublishNotice">
                @Html.AntiForgeryToken()

                <label>Notice Title</label>
                <input name="title" placeholder="e.g., Water supply maintenance schedule" />

                <label>Description</label>
                <textarea name="description" placeholder="Write full notice details here..."></textarea>

                <label>Priority</label>
                <select name="priority">
                    <option value="Normal">Normal</option>
                    <option value="Low">Low</option>
                    <option value="High">High</option>
                    <option value="Urgent">Urgent</option>
                </select>

                <button class="btn" type="submit">Publish Notice</button>

                @if (ViewBag.Error != null)
                {
                    <div class="err">@ViewBag.Error</div>
                }
            </form>
        </div>
    </div>
</body>
</html>
