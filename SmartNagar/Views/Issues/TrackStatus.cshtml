@{
    ViewData["Title"] = "Track Complaints";
}

<style>
    .table-container {
        max-width: 900px;
        margin: 40px auto;
        background: white;
        padding: 25px;
        border-radius: 10px;
        box-shadow: 0 10px 25px rgba(0,0,0,0.1);
    }

    h2 {
        text-align: center;
        color: #2563EB;
        margin-bottom: 20px;
    }
</style>

<div class="table-container">
    <h2>📊 My Complaints</h2>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Category</th>
                <th>Location</th>
                <th>Status</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Garbage</td>
                <td>Ward 5</td>
                <td><span class="badge bg-warning">Pending</span></td>
                <td>2025-01-10</td>
            </tr>
        </tbody>
    </table>
</div>
