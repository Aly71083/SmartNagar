@model List<SmartNagar.Models.Complaint>
@{
    Layout = "~/Views/Citizen/_CitizenLayout.cshtml";
    ViewBag.Active = "MyComplaints";
    ViewBag.FullName = ViewBag.FullName ?? "Citizen";
}

<style>
    .pageTitle {
        font-size: 22px;
        font-weight: 1000;
        margin: 0 0 14px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 12px;
        flex-wrap: wrap;
    }

    .newBtn {
        text-decoration: none;
        background: #22c55e;
        color: #fff;
        padding: 10px 14px;
        border-radius: 12px;
        font-weight: 1000;
        border: none;
        display: inline-flex;
        align-items: center;
        gap: 10px;
        box-shadow: 0 12px 30px rgba(34,197,94,.25);
    }

        .newBtn:hover {
            filter: brightness(.98);
            transform: translateY(-1px);
        }

    .card {
        background: #fff;
        border: 1px solid #eef2f7;
        border-radius: 18px;
        padding: 16px;
        box-shadow: 0 10px 24px rgba(15,23,42,.06);
        overflow: hidden;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 8px;
    }

    th, td {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid #eef2f7;
        font-size: 14px;
        vertical-align: middle;
    }

    th {
        font-weight: 900;
        color: #475569;
        font-size: 12px;
        text-transform: uppercase;
        letter-spacing: .6px;
        background: #fbfdff;
    }

    .badge {
        padding: 6px 12px;
        border-radius: 999px;
        font-size: 12px;
        font-weight: 1000;
        display: inline-block;
    }

    .pending {
        background: #fff7ed;
        color: #9a3412;
    }

    .progress {
        background: #eff6ff;
        color: #1e3a8a;
    }

    .resolved {
        background: #ecfdf5;
        color: #14532d;
    }

    .muted {
        color: #64748b;
        font-weight: 800;
        font-size: 12px;
    }

    .empty {
        padding: 22px;
        text-align: center;
        color: #64748b;
        font-weight: 800;
    }

    @@media(max - width: 860px)

    {
        th: nth-child(3), td:nth-child(3)

    {
        display: none;
    }
    /* hide Title col on small screens */
    th:nth-child(6), td:nth-child(6) {
        display: none;
    }
    /* hide Resolved col on small screens */
    }
</style>

<div class="pageTitle">
    <div>📋 My Complaints</div>
    <a class="newBtn" href="/Citizen/SubmitComplaint">
        <i class="fa-solid fa-plus"></i> Submit New Complaint
    </a>
</div>

<div class="card">
    @if (Model == null || Model.Count == 0)
    {
        <div class="empty">
            You haven’t submitted any complaints yet.
        </div>
    }
    else
    {
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Category</th>
                    <th>Title</th>
                    <th>Status</th>
                    <th>Created</th>
                    <th>Resolved</th>
                    <th style="text-align:right;">Action</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var c in Model)
                {
                    var badgeClass = "pending";
                    if (c.Status == "Resolved") badgeClass = "resolved";
                    else if (c.Status == "In Progress") badgeClass = "progress";

                    <tr>
                        <td><b>#@c.Id</b></td>
                        <td>@(c.Category ?? "-")</td>
                        <td>@(c.Title ?? "-")</td>
                        <td>
                            <span class="badge @badgeClass">@c.Status</span>
                        </td>
                        <td class="muted">@c.CreatedAt.ToLocalTime().ToString("dd MMM yyyy")</td>
                        <td class="muted">
                            @(c.ResolvedAt.HasValue? c.ResolvedAt.Value.ToLocalTime().ToString("dd MMM yyyy") : "-")
                        </td>
                        <td style="text-align:right;">
                            <a class="newBtn" style="background:#3b82f6; box-shadow:none; padding:8px 12px;"
                               href="/Citizen/TrackStatus?id=@c.Id">
                                Track
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
