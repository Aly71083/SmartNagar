@{
    Layout = "~/Views/Citizen/_CitizenLayout.cshtml";
    ViewBag.Active = "GarbageSchedule";
    ViewBag.FullName = ViewBag.FullName ?? "Citizen";
}

<style>
    .title {
        font-size: 22px;
        font-weight: 1000;
        margin-bottom: 14px;
    }

    .hero {
        background: linear-gradient(135deg,#22c55e,#16a34a);
        color: white;
        border-radius: 18px;
        padding: 18px;
        box-shadow: 0 18px 45px rgba(34,197,94,.25);
    }

        .hero h3 {
            margin: 0;
            font-size: 20px;
            font-weight: 1000;
        }

        .hero p {
            margin-top: 8px;
            font-size: 13px;
            opacity: .95;
            font-weight: 750;
        }

    .field {
        margin-top: 18px;
        background: #fff;
        padding: 16px;
        border-radius: 18px;
        border: 1px solid #eef2f7;
        box-shadow: 0 10px 24px rgba(15,23,42,.06);
        max-width: 500px;
    }

    label {
        font-weight: 900;
        display: block;
        margin-bottom: 8px;
    }

    select {
        width: 100%;
        padding: 12px;
        border-radius: 12px;
        border: 1px solid #e2e8f0;
        font-weight: 800;
    }

    .card {
        margin-top: 18px;
        background: #fff;
        border-radius: 18px;
        padding: 18px;
        border: 1px solid #eef2f7;
        box-shadow: 0 10px 24px rgba(15,23,42,.06);
    }

    .infoRow {
        display: grid;
        grid-template-columns: repeat(3,1fr);
        gap: 12px;
        margin-top: 14px;
    }

    .box {
        background: #f8fafc;
        border-radius: 14px;
        padding: 12px;
        border: 1px solid #e2e8f0;
    }

        .box .k {
            font-size: 12px;
            font-weight: 900;
            color: #64748b;
            text-transform: uppercase;
        }

        .box .v {
            margin-top: 6px;
            font-weight: 900;
            font-size: 14px;
            color: #0f172a;
        }

    .btnRow {
        margin-top: 16px;
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
    }

    .btn {
        border: none;
        cursor: pointer;
        padding: 10px 14px;
        border-radius: 12px;
        font-weight: 900;
        font-size: 13px;
    }

    .btnPrimary {
        background: #22c55e;
        color: white;
    }

    .btnGhost {
        background: #e2e8f0;
        color: #0f172a;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        justify-content: center;
    }

    .empty {
        margin-top: 18px;
        padding: 16px;
        background: #fff;
        border: 1px dashed #cbd5e1;
        border-radius: 18px;
        text-align: center;
        font-weight: 900;
        color: #64748b;
    }

    /* ================================
           ✅ Guidelines Section (Screenshot UI)
           ================================ */
    .guideWrap {
        margin-top: 22px;
        background: linear-gradient(180deg, rgba(34,197,94,.25), rgba(34,197,94,.10));
        border-radius: 22px;
        padding: 22px;
    }

    .guidePanel {
        background: #fff;
        border-radius: 22px;
        padding: 26px;
        box-shadow: 0 18px 50px rgba(15,23,42,.10);
        border: 1px solid #eef2f7;
    }

    .guideHead {
        text-align: center;
        margin-bottom: 18px;
    }

    .guideTitle {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        font-size: 30px;
        font-weight: 1000;
        color: #0f172a;
        margin: 0;
    }

        .guideTitle .clip {
            font-size: 26px;
            background: #fff7ed;
            border: 1px solid #fed7aa;
            width: 42px;
            height: 42px;
            border-radius: 12px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 10px 18px rgba(249,115,22,.12);
        }

    .guideSub {
        margin: 8px 0 0;
        color: #64748b;
        font-weight: 800;
        font-size: 14px;
    }

    .guideGrid {
        display: grid;
        grid-template-columns: repeat(2,1fr);
        gap: 16px;
        margin-top: 20px;
    }

    .gCard {
        background: #f8fafc;
        border-radius: 18px;
        padding: 18px;
        border: 1px solid #eef2f7;
        box-shadow: 0 14px 30px rgba(15,23,42,.06);
        position: relative;
        overflow: hidden;
    }

        .gCard::before {
            content: "";
            position: absolute;
            left: 0;
            top: 0;
            width: 5px;
            height: 100%;
            border-radius: 18px 0 0 18px;
            background: #22c55e;
        }

    .gTop {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 10px;
    }

    .gIcon {
        width: 44px;
        height: 44px;
        border-radius: 14px;
        background: #fff;
        border: 1px solid #eef2f7;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 22px;
        box-shadow: 0 10px 18px rgba(15,23,42,.06);
    }

    .gH {
        margin: 0;
        font-size: 18px;
        font-weight: 1000;
        color: #0f172a;
    }

    .gP {
        margin: 0;
        color: #64748b;
        font-weight: 800;
        font-size: 13.5px;
        line-height: 1.6;
    }

    .bGreen::before {
        background: #22c55e;
    }

    .bBlue::before {
        background: #3b82f6;
    }

    .bOrange::before {
        background: #f59e0b;
    }

    .bRed::before {
        background: #ef4444;
    }

    @@media(max-width:900px) {
        .infoRow {
            grid-template-columns: 1fr;
        }

        .guideGrid {
            grid-template-columns: 1fr;
        }

        .guideTitle {
            font-size: 24px;
        }
    }
</style>

<div class="title">
    🗑 Garbage Collection Schedule
    <span style="font-size:13px;color:#64748b;">Dhangadhi Sub-Metropolitan City</span>
</div>

<div class="hero">
    <h3>Ward-wise Garbage Collection</h3>
    <p>
        Select your ward to view collection details.
        Collection Time: <strong>6:00 AM – 10:00 AM</strong><br />
        Waste Type: <strong>All Types of Waste</strong>
    </p>
</div>

<div class="field">
    <label>Select Ward (1–19)</label>
    <select id="wardSelect" onchange="renderSchedule()">
        <option value="">-- Select Ward --</option>
        @for (int i = 1; i <= 19; i++)
        {
            <option value="@i">Ward @i</option>
        }
    </select>
</div>

<!-- ✅ Schedule / Reminder Details FIRST -->
<div id="resultArea"></div>

<!-- ✅ Guidelines DOWN (AFTER DETAILS) -->
<div class="guideWrap">
    <div class="guidePanel">
        <div class="guideHead">
            <h2 class="guideTitle">
                <span class="clip">📋</span>
                Important Guidelines
            </h2>
            <p class="guideSub">Follow these rules for proper waste management</p>
        </div>

        <div class="guideGrid">
            <div class="gCard bGreen">
                <div class="gTop">
                    <div class="gIcon">♻️</div>
                    <h3 class="gH">Segregate Waste</h3>
                </div>
                <p class="gP">
                    Separate wet and dry waste into different bins. Green bins for wet waste and blue bins for dry waste.
                </p>
            </div>

            <div class="gCard bBlue">
                <div class="gTop">
                    <div class="gIcon">⏱️</div>
                    <h3 class="gH">Be On Time</h3>
                </div>
                <p class="gP">
                    Keep your waste bins ready before collection time. Late placement may result in missed collection.
                </p>
            </div>

            <div class="gCard bOrange">
                <div class="gTop">
                    <div class="gIcon">⚠️</div>
                    <h3 class="gH">Hazardous Waste</h3>
                </div>
                <p class="gP">
                    Dispose of hazardous materials like batteries, chemicals, and electronics separately at designated centers.
                </p>
            </div>

            <div class="gCard bRed">
                <div class="gTop">
                    <div class="gIcon">💰</div>
                    <h3 class="gH">Avoid Penalties</h3>
                </div>
                <p class="gP">
                    Non-compliance with segregation rules may result in fines. Help keep our city clean and green!
                </p>
            </div>
        </div>
    </div>
</div>

<script>
    function renderSchedule() {
        const ward = document.getElementById("wardSelect").value;
        const host = document.getElementById("resultArea");

        if (!ward) {
            host.innerHTML = `<div class="empty">Please select a ward to view the schedule.</div>`;
            return;
        }

        host.innerHTML = `
            <div class="card">
                <h3>📍 Ward ${ward} Collection Details</h3>

                <div class="infoRow">
                    <div class="box">
                        <div class="k">Collection Days</div>
                        <div class="v">Sunday – Friday</div>
                    </div>

                    <div class="box">
                        <div class="k">Time</div>
                        <div class="v">6:00 AM – 10:00 AM</div>
                    </div>

                    <div class="box">
                        <div class="k">Waste Type</div>
                        <div class="v">All Types of Waste</div>
                    </div>
                </div>

                <div class="btnRow">
                    <form method="post" action="/Citizen/SaveGarbageReminder">

                        <input type="hidden" name="wardNumber" value="${ward}" />
                        <input type="hidden" name="days" value="Sunday – Friday" />
                        <input type="hidden" name="time" value="6:00 AM – 10:00 AM" />
                        <input type="hidden" name="notes" value="All Types of Waste" />
                        <button type="submit" class="btn btnPrimary">🔔 Remind Me</button>
                    </form>

                    <a class="btn btnGhost" href="/Citizen/MyGarbageReminders">📌 My Reminders</a>
                </div>
            </div>
        `;
    }
</script>
