@model SmartNagar.ViewModels.OfficerManagementVM
@{
    Layout = "~/Views/Officer/_OfficerLayout.cshtml";
    ViewBag.Title = "Management";
}

<style>
    .title {
        font-size: 26px;
        font-weight: 1000;
        margin: 6px 0 4px;
    }

    .subtitle {
        color: #667085;
        font-weight: 700;
        margin-bottom: 16px;
    }

    .grid2 {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 14px;
    }

    .cardx {
        background: #fff;
        border: 1px solid #ece7ff;
        border-radius: 18px;
        box-shadow: 0 12px 35px rgba(16,24,40,.08);
        padding: 16px;
    }

    .cardTitle {
        font-weight: 1000;
        margin: 0 0 10px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        font-size: 13px;
    }

    th {
        text-align: left;
        color: #667085;
        font-weight: 1000;
        font-size: 11px;
        letter-spacing: .06em;
        padding: 12px 10px;
        text-transform: uppercase;
        border-bottom: 1px solid #f1edff;
    }

    td {
        padding: 14px 10px;
        border-bottom: 1px solid #f4f1ff;
        vertical-align: middle;
        font-weight: 800;
    }

    select {
        width: 100%;
        border: 1px solid #ece7ff;
        border-radius: 12px;
        padding: 8px 10px;
        outline: none;
        background: #fff;
        font-weight: 900;
    }

    .btn {
        border: none;
        border-radius: 10px;
        padding: 8px 10px;
        font-weight: 1000;
        cursor: pointer;
        white-space: nowrap;
    }

    .btnPurple {
        background: #7c3aed;
        color: #fff;
    }

        .btnPurple:hover {
            background: #6d28d9;
        }

    .btnGhost {
        border: 1px solid #ece7ff;
        background: #fff;
        color: #7c3aed;
    }
</style>

<div>
    <div class="title">Management</div>
    <div class="subtitle">Assign complaints to officers and manage current allocations.</div>

    <div class="grid2">
        <!-- UNASSIGNED -->
        <div class="cardx">
            <div class="cardTitle">Unassigned Complaints (@Model.UnassignedComplaints.Count)</div>

            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Title</th>
                        <th>Citizen</th>
                        <th>Assign</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.UnassignedComplaints.Count == 0)
                    {
                        <tr><td colspan="4" style="color:#667085;">No unassigned complaints 🎉</td></tr>
                    }
                    else
                    {
                        foreach (var c in Model.UnassignedComplaints)
                        {
                            <tr>
                                <td style="color:#6d28d9; font-weight:1000;">CN-@c.Id.ToString("0000")</td>
                                <td>@c.Title</td>
                                <td>@(c.Citizen?.FullName ?? "Citizen")</td>
                                <td>
                                    <form asp-action="AssignToOfficer" method="post" style="display:flex; gap:8px; align-items:center;">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="complaintId" value="@c.Id" />

                                        <select name="officerId">
                                            @foreach (var o in Model.Officers)
                                            {
                                                <option value="@o.Id">@o.Name</option>
                                            }
                                        </select>

                                        <button class="btn btnPurple" type="submit">Assign</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

        <!-- ASSIGNED -->
        <div class="cardx">
            <div class="cardTitle">Recently Assigned (@Model.AssignedComplaints.Count)</div>

            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Title</th>
                        <th>Officer</th>
                        <th>Unassign</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.AssignedComplaints.Count == 0)
                    {
                        <tr><td colspan="4" style="color:#667085;">No assigned complaints yet.</td></tr>
                    }
                    else
                    {
                        foreach (var c in Model.AssignedComplaints)
                        {
                            <tr>
                                <td style="color:#6d28d9; font-weight:1000;">CN-@c.Id.ToString("0000")</td>
                                <td>@c.Title</td>
                                <td>@(c.AssignedOfficer?.FullName ?? c.AssignedOfficer?.Email ?? "Officer")</td>
                                <td>
                                    <form asp-action="Unassign" method="post">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="complaintId" value="@c.Id" />
                                        <button class="btn btnGhost" type="submit">Unassign</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>