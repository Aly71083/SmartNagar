@model SmartNagar.ViewModels.CitizenDashboardVM
@{
    Layout = "~/Views/Citizen/_CitizenLayout.cshtml";
    ViewBag.Active = "Home";
    ViewBag.FullName = Model?.FullName ?? "Citizen";
}

<style>
    .banner {
        background: linear-gradient(90deg,#4fb75b,#6ccf77);
        border-radius: 16px;
        padding: 22px;
        color: #fff;
        box-shadow: 0 14px 30px rgba(0,0,0,.08);
        display: flex;
        align-items: center;
        gap: 14px;
        margin-bottom: 16px;
    }

        .banner h3 {
            margin: 0;
            font-size: 22px;
            font-weight: 1000;
        }

        .banner p {
            margin: 6px 0 0;
            opacity: .95;
            font-size: 13px;
            font-weight: 750;
        }

    .stats {
        display: grid;
        grid-template-columns: repeat(4,1fr);
        gap: 14px;
        margin: 14px 0 18px;
    }

    .stat {
        background: #fff;
        border-radius: 14px;
        padding: 16px;
        box-shadow: 0 10px 22px rgba(0,0,0,.06);
        position: relative;
        overflow: hidden;
        border: 1px solid #eef2f7;
        min-height: 82px;
    }

        .stat:before {
            content: "";
            position: absolute;
            left: 0;
            top: 0;
            bottom: 0;
            width: 4px;
            background: var(--c, #46b050);
        }

        .stat h2 {
            margin: 0;
            font-size: 24px;
            font-weight: 1000;
        }

        .stat small {
            color: #64748b;
            font-weight: 800;
            font-size: 12px;
        }

    .cards {
        display: grid;
        grid-template-columns: repeat(5,1fr);
        gap: 14px;
        margin-top: 16px;
    }

    .card {
        background: #fff;
        border-radius: 16px;
        padding: 18px;
        box-shadow: 0 12px 24px rgba(0,0,0,.06);
        text-decoration: none;
        color: #111827;
        transition: .15s transform ease, .15s box-shadow ease;
        border: 1px solid #eef2f7;
        min-height: 130px;
    }

        .card:hover {
            transform: translateY(-2px);
            box-shadow: 0 18px 36px rgba(15,23,42,.10);
        }

    .ico {
        width: 52px;
        height: 52px;
        border-radius: 14px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #fff;
        font-size: 18px;
        margin-bottom: 12px;
        box-shadow: 0 14px 28px rgba(15,23,42,.12);
    }

    .card h4 {
        margin: 0 0 6px;
        font-weight: 1000;
    }

    .card p {
        margin: 0;
        font-size: 12px;
        color: #6b7280;
        line-height: 1.4;
        font-weight: 700;
    }

    @@media (max-width: 1100px) {
        .cards

    {
        grid-template-columns: repeat(3,1fr);
    }

    .stats {
        grid-template-columns: repeat(2,1fr);
    }

    }

    @@media (max-width: 720px) {
        .cards

    {
        grid-template-columns: repeat(2,1fr);
    }

    }

    @@media (max-width: 520px) {
        .cards

    {
        grid-template-columns: 1fr;
    }

    }
</style>

<div class="banner">
    <div style="font-size:26px">🌟</div>
    <div>
        <h3>Quick Access to Services</h3>
        <p>Report issues, track complaints, and stay updated with municipal activities</p>
    </div>
</div>

<div class="stats">
    <div class="stat" style="--c:#16a34a">
        <h2>@Model.TotalComplaints</h2>
        <small>Total Complaints</small>
    </div>
    <div class="stat" style="--c:#3b82f6">
        <h2>@Model.InProgress</h2>
        <small>In Progress</small>
    </div>
    <div class="stat" style="--c:#f59e0b">
        <h2>@Model.Pending</h2>
        <small>Pending</small>
    </div>
    <div class="stat" style="--c:#22c55e">
        <h2>@Model.Resolved</h2>
        <small>Resolved</small>
    </div>
</div>

<div class="cards">
    <a class="card" href="/Citizen/SubmitComplaint">
        <div class="ico" style="background:#46b050"><i class="fa-solid fa-pen-to-square"></i></div>
        <h4>Submit Complaint</h4>
        <p>Report civic issues like roads, water, waste management instantly</p>
    </a>

    <a class="card" href="/Citizen/TrackStatus">
        <div class="ico" style="background:#3b82f6"><i class="fa-solid fa-magnifying-glass"></i></div>
        <h4>Track Status</h4>
        <p>Monitor real-time status updates of your submitted complaints</p>
    </a>

    <a class="card" href="/Citizen/Emergency">
        <div class="ico" style="background:#ef4444"><i class="fa-solid fa-triangle-exclamation"></i></div>
        <h4>Emergency</h4>
        <p>Quick access to police, ambulance, and fire services</p>
    </a>

    <a class="card" href="/Citizen/GarbageSchedule">
        <div class="ico" style="background:#f59e0b"><i class="fa-solid fa-trash"></i></div>
        <h4>Garbage Schedule</h4>
        <p>View area-wise garbage collection days and timings</p>
    </a>

    <a class="card" href="/Citizen/Notices">
        <div class="ico" style="background:#a855f7"><i class="fa-solid fa-bullhorn"></i></div>
        <h4>Notices</h4>
        <p>Stay updated with latest municipal announcements</p>
    </a>
</div>
